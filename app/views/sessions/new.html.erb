<h1><a href="/"> Parrot Pandemonium </a></h1>

<h2>Login</h2>
<% if flash[:notice] %>
  <%=flash[:notice] %><br>
<% end %>
<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
